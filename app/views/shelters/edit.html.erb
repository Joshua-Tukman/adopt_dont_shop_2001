<h2>Update Shelter Form</h2>

<%= form_tag "/shelters/#{@shelter.id}", method: :put do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @shelter.name %><br>
  <%= label_tag :address %>
  <%= text_field_tag :address, @shelter.address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city, @shelter.city %><br>
  <%= label_tag :state %>
  <%= text_field_tag :state, @shelter.state%><br>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode,  @shelter.zipcode %><br>

  <%= submit_tag 'Update Shelter' %>
<% end %>
